@using Microsoft.Extensions.Primitives
@using OAuthServer.ViewModels.Authorization
@model AuthorizeViewModel
@{
    Layout = "_Layout";
}


<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h2 class="card-title mb-4">Authorization Request</h2>
                    <p class="card-text mb-4">
                        Do you want to grant
                        <strong>@Model.ApplicationName</strong> access to your data?
                    </p>
                    <p class="text-muted mb-4">Scopes requested: <code>@Model.Scope</code></p>

                    <form asp-controller="Authorization" asp-action="Authorize" method="post">
                        @* Preserve all request parameters *@
                        @foreach (var parameter in Context.Request.HasFormContentType ?
                        (IEnumerable<KeyValuePair<string, StringValues>>)Context.Request.Form : Context.Request.Query)
                        {
                            <input type="hidden" name="@parameter.Key" value="@parameter.Value" />
                        }

                        <div class="d-flex justify-content-center gap-3">
                            <button type="submit" name="submit.Accept" class="btn btn-success btn-lg">
                                Yes
                            </button>
                            <button type="submit" name="submit.Deny" class="btn btn-danger btn-lg">
                                No
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
